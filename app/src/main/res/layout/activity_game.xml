<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="#231F20">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Berlin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="65sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:text="LEVEL 5"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="300 Coins"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="302dp"
        android:text="00"
        android:textColor="#EF4B4B"
        android:textSize="60sp" />

    <EditText

        android:id="@+id/answerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="126dp"

        android:layout_marginRight="20dp"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#cccccc"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnsignin"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/answerText"
        android:layout_alignStart="@+id/answerText"
        android:layout_alignLeft="@+id/answerText"
        android:layout_alignEnd="@+id/answerText"
        android:layout_alignRight="@+id/answerText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:text="@string/submit"
        android:onClick="submitAnswer"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnHint"
        android:layout_width="352dp"

        android:layout_height="54dp"
        android:layout_below="@+id/btnsignin"
        android:layout_alignStart="@+id/btnsignin"
        android:layout_alignLeft="@+id/btnsignin"
        android:layout_alignEnd="@+id/btnsignin"
        android:layout_alignRight="@+id/btnsignin"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:onClick="getHint"
        android:text="@string/get_hint"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/my_view"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#E91E63"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="67dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="back"

        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />


</RelativeLayout>
